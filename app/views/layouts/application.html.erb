<!DOCTYPE html>
<html>
  <head>
    <title>FeFlickPick</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

  <% if current_user %>
    <%=  button_to "Dashboard", "/users/1", method: :get %>
    <%=  button_to "Log out", "/sessions/#{current_user.id}", method: :delete %>
  <% else %>
    <%=  button_to "Sign in", new_session_path, method: :get %>
    <%=  button_to "Create User", new_user_path, method: :get %>
  <% end %>

    <%= yield %>
  </body>
</html>
